{
  "enabled": true,
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies"
  ],
  "internalChecksFilter": "strict",
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackageNames": ["io.kubernetes:client-java"],
      "allowedVersions": "!/.*-legacy$/"
    }
  ]
}
